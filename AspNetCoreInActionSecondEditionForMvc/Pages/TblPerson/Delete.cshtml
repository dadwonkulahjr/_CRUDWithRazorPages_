@page "{id:min(1)}"
@model AspNetCoreInActionSecondEditionForMvc.Pages.Employees.DeleteModel
@{
    ViewData["Title"] = "Delete Person";
}

<h2 class="text-primary">
    Delete Confirmation
</h2>
<hr />
<div class="alert alert-danger">
    <h3>
        Are you sure you want to delete this person - @Model.TblPerson.Name?
    </h3>
    <form method="post">
        <input hidden="hidden" asp-for="TblPerson.PersonId" />
        <div class="row">
            <div class="col-12">
                <button class="btn btn-outline-danger w-25 p-3" type="submit">Yes</button>
                <a asp-page="Index" class="btn btn-outline-secondary  w-25 p-3">No</a>
            </div>
        </div>
      

    </form>

</div>

